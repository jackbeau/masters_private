    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Stage Assistant",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug API Server",
            "program": "${workspaceFolder}/server/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "runtimeExecutable": "/Users/jackb/.nvm/versions/node/v21.7.3/bin/node"
        },
        {
            "type": "java",
            "name": "Debug Java App",
            "request": "launch",
            "mainClass": "broker.App",
            "projectName": "app"
        },
        {
            "name": "Debug speech_to_line",
            "type": "debugpy",
            "request": "launch",
            "module": "speech_to_line.main",
            "args": ["{\"microphone\": {\"microphone_device\": 1}}"],  // Adjust your settings here
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/server/grpc/python"
            }
        }
    ]
}